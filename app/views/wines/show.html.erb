<div class= "wine_show">
<div id="heading" class="heading">
<h1>Wine: <%= @wine.name %></h1>
</div>


<div class="product_image">  <%= link_to image_tag @wine.img_url  %> </div>

<div class="desc">

    <p>Type: <%= @wine.grape %></p>

    <p>From: <%= @wine.origin %></p>

    <p>Price: $<%= @wine.price %></p>

    <p>Recommended With: <%= @wine.pairing %></p>

</div>

</div>